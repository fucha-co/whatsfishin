<section class="">

      <div class="relative pt-6 pb-10 text-center">
        
        <div class="mb-10 text-sm font-semibold lowercase tracking-wide text-gray-500 sm:text-base lg:text-sm xl:text-base">
            <mark>{{ site.domain }}</mark>
        </div>
        
        <h1 class="mt-0 mb-8 sm:mb-2 bangers text-huge tracking-normal sm:tracking-wide leading-none font-extrabold text-gray-900">
          {{ site.name }}
          <!--span class="text-indigo-600">online business</span-->
        </h1>
        
        <h2 class="bangers mt-0 mx-auto text-4xl text-indigo-500 sm:text-6xl md:text-6xl">
          <mark class="">{{ site.blurb }}&nbsp;</mark>
        </h2>

        <h3 class="mt-4 text-xl sm:text-3xl sm:leading-9 leading-8 font-normal text-gray-900 tracking-tight ">
          {{ site.street }}, {{ site.suburb }} &middot; {{ site.post }}
        </h3>

        <h4 class="mt-4 text-xl leading-8 sm:text-3xl sm:leading-9 font-black text-gray-900 tracking-tight ">
          <a href="tel:{{ site.tel }}" class="border-b-2 border-dotted" onclick="fathom.trackGoal('{{ site.fathom.goal.phonenumber }}', 0);">{{ site.phone }}</a>
        </h4>

        <div class="mt-5 max-w-3xl mx-auto sm:flex sm:justify-center md:mt-8 uppercase">
          <div class="rounded-md shadow">
            <a href="tel:{{ site.tel }}" class="w-full flex items-center justify-center px-10 py-4 text-xl leading-6 font-medium rounded-md text-white hover:text-black bg-black hover:bg-gray-200 border-8 border-black hover:border-gray-400 transition duration-150 ease-in-out" onclick="fathom.trackGoal('{{ site.fathom.goal.phonebtn }}', 0);">
              <div class="flex items-center justify-center h-12 w-12 text-white">
                <span class="text-4xl mr-4" role="img" aria-label="telephone">☎️</span>
            </div> {{ site.phoneorderbtn }}
            </a>
          </div>
          <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
            <a href="{{ site.squaresite }}" target="" class="w-full flex items-center justify-center px-10 py-4 text-xl leading-6 font-medium rounded-md text-black hover:text-black border-8 border-black hover:border-gray-400 bg-yellow hover:bg-gray-200 transition duration-150 ease-in-out" onclick="fathom.trackGoal('{{ site.fathom.goal.squarebtn }}', 0);">
              <div class="flex items-center justify-center h-12 w-12 text-3xl">
                  <span class="text-5xl mr-5" role="img" aria-label="credit card">💳</span>
                </div> {{ site.onlineorderbtn }}
            </a>
          </div>
        </div>

        <p class="mt-8 text-base leading-6 text-indigo-600 font-semibold tracking-wide uppercase"><a href="#menu">Or see our menu below</a></p>

    </div>

</section>