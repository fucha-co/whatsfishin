<section id="menu" >

    <div class="my-6 py-2"> 
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">

            <!--
                https://codepen.io/j_greig/pen/abvBQZZ

                Initalise Alpine.js with an array of foodtypes, and a variable to store the selected foodtype 
            -->

            <div class="" x-data="{ foodArray: ['&nbsp;游 fish&nbsp;&nbsp;','游꼢 burgers','游볭 salads','游 sides','游보 packs','游꼩 curry'], selectedFoodType: null}">

                <div class="">
                    <div class="bangers block">
                        <div class="border-b border-gray-200">
                            <nav class="-mb-px flex">

                                <!-- Start with a "Show all" tag that is selected by default -->
                                    <a  href="#"
                                        @click.prevent="selectedFoodType = null, console.log('selectedFoodType = everything')" 
                                        class="flex-1 py-4 px-1 text-center border-b-2 border-gray-300 hover:border-indigo-500 bg-gray-200 font-medium text-lg sm:text-3xl leading-5 text-indigo-600" 
                                        :class="{'focus:bg-gray-200 focus:outline-none focus:border-indigo-500' : selectedFoodType == null }"
                                        aria-current="page">
                                        Full <br class="inline sm:hidden">Menu
                                    </a>
                                <!-- Loop through the foodtype array and create clickable tags. When a tag is active, add classes for pink text & borders. -->
                                    <template x-for="foodItem in foodArray" :key="foodItem">
                                        <a
                                        href="#"
                                        @click.prevent="selectedFoodType = foodItem, console.log('selectedFoodType = '+selectedFoodType)"
                                        class="flex-1 py-4 px-1 text-center border-b-2 font-medium text-lg sm:text-3xl leading-5 text-gray-500 bg-gray-200 hover:text-indigo-600 hover:border-gray-300 focus:outline-none focus:text-gray-700 focus:border-gray-300"
                                        :class="{'focus:bg-white focus:outline-none focus:text-indigo-600 focus:border-indigo-500 focus:border-t-2' : selectedFoodType == foodItem }"
                                        x-text="foodItem">    
                                        </a>
                                    </template>
                            </nav>
                        </div>
                    </div>
                </div>

                {% if fish.items %}
                    <div x-show="selectedFoodType == null || selectedFoodType == '&nbsp;游 fish&nbsp;&nbsp;'" class="mt-1 px-4 py-5 border-b border-gray-200 sm:px-6">
                        <h3 class="bangers text-4xl leading-6 font-medium text-gray-900">
                            Fish <span class="text-4xl">游</span> 
                            <br class="inline sm:hidden">
                            <span class="text-2xl sm:text-4xl text-gray-500">
                            fresh catch</span>
                        </h3>
                        <!--p class="mt-1 max-w-2xl text-sm leading-5 text-gray-500">
                        What's Fishin
                        </p-->
                    </div>
                    <div x-show="selectedFoodType == null || selectedFoodType == '&nbsp;游 fish&nbsp;&nbsp;'" class="border-b border-gray-200 px-4 py-5 sm:px-6">
                        <dl class="grid grid-cols-1 col-gap-16 row-gap-6 sm:grid-cols-2">
                            {% for item in fish.items %}
                                <div class="flex flex-wrap leading-none">
                                    <div class="flex-initial mr-3 text-xl font-bold text-black">{{ item.emoji }}</div>
                                    <div class="flex-1">
                                        <div class="inline-flex w-full flex-wrap">
                                            <div class="flex-initial text-xl capitalize">{{ item.item }}</div>
                                            <div class="flex-grow border-b border-b-4 border-dotted border-gray-400 mx-1 h-5"></div>
                                            <div class="w-full text-gray-700 leading-tight py-2 capitalize">{{ item.desc }} <!--span class="uppercase text-xs">Options: {{ item.options }}</span--></div>
                                        </div>
                                    </div>
                                    <div class="flex-initial text-xl">${{ item.price }}</div>
                                </div>
                            {% endfor %}
                        </dl>
                    </div>
                {% endif %}

                {% if burger.items %}
